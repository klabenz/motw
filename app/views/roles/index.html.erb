<h3>Roles</h3>
 
<table class="table">
  <tr>
    <th>Charater Name</th>
	<th>Movie</th>
  </tr>
 
  <% @roles.each do |role| %>
    <tr>
      <td><%= role.cname %></td>
	  <td><%= role.movie.title %></td>
      <td><%= link_to 'Show', role_path(role) %></td>
      <td><%= link_to 'Edit', edit_role_path(role) %></td>
      <td><%= link_to 'Destroy', role_path(role),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'New role', new_role_path %>