<h3>Actors</h3>
 
<table class="table">
  <tr>
    <th>Name</th>
  </tr>
 
  <% @actors.each do |actor| %>
    <tr>
      <td><%= actor.fname %> <%= actor.lname %></td>
      <td><%= link_to 'Show', actor_path(actor) %></td>
      <td><%= link_to 'Edit', edit_actor_path(actor) %></td>
      <td><%= link_to 'Destroy', actor_path(actor),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'New actor', new_actor_path %>